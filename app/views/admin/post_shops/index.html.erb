
<h4>雑貨屋投稿一覧</h4>

<div class="col-md-8 offset-md-1">
<table class="table">

    <tr>
      <th>投稿写真</th>
      <th>投稿者名</th>
      <th>投稿日時</th>
      <th>エリア</th>
    </tr>
<% @post_shops.each do |post_shop| %>
    <tr>
      <td>
        <% if post_shop.image.attached? %>
        <%= image_tag post_shop.image, size: "200x200" %>
        <% else %>
        <%= image_tag 'no_image', size: "200x200" %>
        <% end %>
      </td>
      <td><%= link_to post_shop.name, "/admin/post_shops/#{post_shop.id}" %></td>
      <td><%= post_shop.customer.nickname %></td>
      <td><%= post_shop.created_at.strftime('%Y/%m/%d(%R)') %></td>
      <td><%= post_shop.area.name %></td>
      
    </tr>
<% end %>
</table>
</div>
<footer>
<%= paginate @post_shops %></footer>
