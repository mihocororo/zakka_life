<body>
  <div class = "title">
    <h4 class="mark">エリア追加・一覧</h4>
  </div>

  <div class="container">
    <div class="row">
    <div class="col">

  <div class = "text">
    <h4>エリア追加</h4>
    <%= form_with model: @area, url: admin_areas_path do |f| %>

  <div class="field">
    <%= f.label :エリア名 %><br />


      <%= f.text_field :name %>
  </div>

  <div class="actions2">
      <% if admin_signed_in? %>
      <%= f.submit "新規登録",class:"btn btn-outline-danger mt-5" %>
      <% else %>
      <% end %>
    <% end %>
  </div>
    </div>
    </div>

  <div class="col">
  <table class="table">
    <thead>
      <tr>
        <h4>エリア一覧</h4>

      </tr>
    </thead>
    <tbody>
      <% @areas.each do |area| %>
      <tr>
        <td><%= area.name %></td>
        <% if admin_signed_in? %>
        <td><%= link_to "編集する", edit_admin_area_path(area) ,class:"btn btn-outline-success" %></td>
        <% else %>
        <% end %>
      </tr>
      <% end %>
    </tbody>
  </table>
    </div>
    </div>
  </div>
  </body>



