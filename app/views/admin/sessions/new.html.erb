<body>
  <div class = "title">
  <h2><%= image_tag "risu.jpg", size: '80x80' %>管理者ログイン</h2></div>
  <div class = "text">
  <!--<= form_with model: @admin, url: session_path(resource_name) do |f| %>-->
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field">
      <%= f.label :メールアドレス %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :パスワード %><br />
      <%= f.password_field :password, autocomplete: "current-password" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
    <%= f.submit "ログイン" %>
    </div>
  <% end %>

  <% render "admin/shared/links" %>
  </div>
  </body>