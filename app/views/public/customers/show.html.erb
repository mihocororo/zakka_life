<h4><%= image_tag "cat.jpg", size: '80x80' %>マイページ</h4>
<div class="mysidebar">
<h4>☆星評価一覧</h4>
<table class="mytable">
<% @shop_comments.each do |t| %>
  <tbody>
    <tr>
      <td>店舗名</td>
      <td>
      <%= link_to post_shop_path(t.post_shop) do %>
      <%= t.post_shop.name %>
      <% end %></td>
    </tr>
    <tr>
    <td>星評価</td>
    <td><% if t.rate? %>
    <% for i in 1..t.rate do %>
    ★
    <% end %>
    <% end %></td>
    </tr>
    <tr>
      <td>コメント</td>
      <td><%= t.comment %></td>
    </tr>
    <tr>
    <td><%= link_to "削除", destroy_shop_comment_path(t.id), method: :delete, "data-confirm" => "本当に削除しますか？" %></td>
    <td></td>
    </tr>
<% end %></table>
</div>

<div class="mysidebar">
  <h4>☆お気に入り一覧</h4>
  <table class="mytable">
  <% @likes.each do |like| %>
  <tbody>
    <tr>
      <td>投稿者名</td>
      <td><%= like.post_shop.customer.nickname %></td>
    </tr>
    <tr>
      <td>店舗画像</td>
      <td><%= image_tag like.post_shop.image, size: "100x100" %></td>
    </tr>
    <tr>
      <td>店舗名</td>
      <td>
          <%= link_to post_shop_path(like.post_shop) do %>
          <%= like.post_shop.name %>
          <% end %>
      </td>
    </tr>
  </tbody>
  <% end %>

</table>
</div>


<div class = "mypage">


<h4>☆登録情報</h4>

  <table class="table table-hover">
  <tbody>
    <tr>
      <td></td>
      <td><a class="btn btn-outline-success" href="/customers/information/edit" role="button">編集する</a></td>
    </tr>
    <tr>
      <td>氏名</td>
      <td><%= @customer.name %></td>
    </tr>
    <tr>
      <td>投稿名</td>
      <td><%= @customer.nickname %></td>
    </tr>
    <tr>
      <td>メールアドレス</td>
      <td><%= @customer.email %></td>
    </tr>
  </table>
</div>






